.wrapper
	max-width $max-width
	border 5px solid $red
	border-radius 15px
	min-height 100vh
	margin 0 auto
	
	h1
		margin 5px 0

	.module
		width 100%
		padding 5px 0
		
		h2 
			display inline-block

		.module-container
			margin 0 auto;
			padding 10px
			border 3px solid $red
			border-radius 12px
			
			.weather-report
				float left
				width 100%
	
	.spinner
		display inline-block
		width 32px
		height 32px
		background-image url("../images/loading.gif")
	